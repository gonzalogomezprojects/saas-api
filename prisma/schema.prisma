// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  STAFF
  USER
}

enum OrderStatus {
  DRAFT
  PENDING
  PAID
  CANCELLED
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum TicketType {
  CUSTOMER
  INTERNAL
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())

  users     User[]
  clients   Client[]
  orders    Order[]
  tickets   Ticket[]
  orderItems OrderItem[]

  @@index([createdAt])
}

model User {
  id           String   @id @default(cuid())
  tenantId     String
  tenant       Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  email        String
  passwordHash String
  role         Role     @default(USER)
  isActive     Boolean  @default(true)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  refreshTokens   RefreshToken[]
  assignedTickets Ticket[] @relation("TicketAssignedTo")

  @@unique([tenantId, email])
  @@index([tenantId])
  @@index([tenantId, role])
  @@index([tenantId, isActive])
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  tokenHash String
  expiresAt DateTime
  revokedAt DateTime?

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Client {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  name      String
  email     String?
  phone     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders    Order[]
  tickets   Ticket[]

  @@index([tenantId])
  @@index([tenantId, name])
  @@index([tenantId, email])
}

model Order {
  id          String      @id @default(cuid())
  tenantId    String
  tenant      Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  clientId    String
  client      Client      @relation(fields: [clientId], references: [id], onDelete: Restrict)

  status      OrderStatus @default(PENDING)

  totalCents  Int         @default(0) // total en centavos
  notes       String?

  items       OrderItem[]
  tickets     Ticket[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([tenantId])
  @@index([tenantId, clientId])
  @@index([tenantId, status])
  @@index([createdAt])
}

model OrderItem {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  description String
  amountCents Int      // monto del concepto en centavos

  createdAt   DateTime @default(now())

  @@index([tenantId])
  @@index([orderId])
}

model Ticket {
  id           String       @id @default(cuid())
  tenantId     String
  tenant       Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  type         TicketType   @default(CUSTOMER)
  title        String
  description  String?
  status       TicketStatus @default(OPEN)

  // Ticket puede estar ligado a un cliente (soporte) aunque no exista order
  clientId     String?
  client       Client?      @relation(fields: [clientId], references: [id], onDelete: SetNull)

  // Ticket puede estar ligado a una orden (post-venta / seguimiento)
  orderId      String?
  order        Order?       @relation(fields: [orderId], references: [id], onDelete: SetNull)

  // Asignaci√≥n interna
  assignedToId String?
  assignedTo   User?        @relation("TicketAssignedTo", fields: [assignedToId], references: [id], onDelete: SetNull)

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([tenantId])
  @@index([tenantId, type])
  @@index([tenantId, status])
  @@index([assignedToId])
  @@index([clientId])
  @@index([orderId])
}
